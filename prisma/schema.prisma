// 2. Add the new SiteFeature model
model SiteFeature {
  id          String      @id @default(cuid())
  site        Site        @relation(fields: [siteId], references: [id], onDelete: Cascade)
  siteId      String
  name        FeatureName
  description String?
  @@unique([siteId, name])
}
